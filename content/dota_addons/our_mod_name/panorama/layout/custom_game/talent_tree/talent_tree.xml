<root>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/talent_tree/talent_tree.js"/>
	</scripts>
	<styles>
		<include src="file://{resources}/styles/custom_game/talent_tree/talent_tree.css"/>
	</styles>
	<Panel class="TalentRoot">
		<Panel id="TalentBackground">
			<Panel id="Divider"/>
			<Label id="TalentTree" text="Talent Tree"/>
		</Panel>
		<Button id="OpenButton" 
			onactivate=
			"$('#TalentBackground').ToggleClass('hidden');
			$('#Talent1').ToggleClass('hidden');
			$('#Talent2').ToggleClass('hidden');
			$('#Talent3').ToggleClass('hidden');
			$('#Talent4').ToggleClass('hidden');
			$('#Talent5').ToggleClass('hidden');
			$('#Talent6').ToggleClass('hidden');
			$('#Talent7').ToggleClass('hidden');
			$('#Talent8').ToggleClass('hidden');
			$('#Talent9').ToggleClass('hidden');
			$('#Talent10').ToggleClass('hidden');
			$('#CloseButton').ToggleClass('hidden');
			$('#OpenButton').ToggleClass('hidden')"
		/>
		<Button id="CloseButton"
			onactivate=
			"$('#TalentBackground').ToggleClass('hidden');
			$('#Talent1').ToggleClass('hidden');
			$('#Talent2').ToggleClass('hidden');
			$('#Talent3').ToggleClass('hidden');
			$('#Talent4').ToggleClass('hidden');
			$('#Talent5').ToggleClass('hidden');
			$('#Talent6').ToggleClass('hidden');
			$('#Talent7').ToggleClass('hidden');
			$('#Talent8').ToggleClass('hidden');
			$('#Talent9').ToggleClass('hidden');
			$('#Talent10').ToggleClass('hidden');
			$('#OpenButton').ToggleClass('hidden')"
		/>
		<Panel id="TalentLeft">
			<Panel id="Talent1"/>
			<Panel id="Talent3"/>
			<Panel id="Talent5"/>
			<Panel id="Talent7"/>
			<Panel id="Talent9"/>
		</Panel>
		<Panel id="TalentRight">
			<Panel id="Talent2"/>
			<Panel id="Talent4"/>
			<Panel id="Talent6"/>
			<Panel id="Talent8"/>
			<Panel id="Talent10"/>
		</Panel>
	</Panel>
</root>