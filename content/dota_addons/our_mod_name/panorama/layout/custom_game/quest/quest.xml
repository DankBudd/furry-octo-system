<root>
	
	<styles>
		<include src="file://{resources}/styles/custom_game/quest/quest.css" />
	</styles>
	
	<scripts>
		<include src="file://{resources}/scripts/custom_game/quest/quest.js" />
	</scripts>
	
	<snippets>
		<snippet name="Quest">
			<Panel class="Quest">
				<Panel id="LeftSide">
					<Panel id="QuestImage">
						<Image id="Image" src="file://{resources}/images/custom_game/quest/holdout_voodoo.png" />
					</Panel>
				</Panel>
				<Panel id="RightSide">
					<Panel id="TopSide">
						<Label id="QuestTitle" text="Quest Title" />
					</Panel>
					<Panel id="BottomSide">
						<Panel id="Background" />
						<Label id="QuestDescription" text="Sample Quest Desc" />
						<Label id="QuestProgress" text="0/1" />
					</Panel>
				</Panel>
			</Panel>
		</snippet>
	</snippets>
	
	<Panel class="QuestRoot" >
		<Label id="QuestName" text="                          Quests                          "/>
		<Panel id="Quests"/>
	</Panel>

</root>